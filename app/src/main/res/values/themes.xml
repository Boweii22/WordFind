<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.WordFind" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="colorPrimary">@android:color/white</item>
    </style>
    <style name="Theme.WordFind" parent="Base.Theme.WordFind" />
    <style name="ChipStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_chip_gray</item>
    </style>
</resources>