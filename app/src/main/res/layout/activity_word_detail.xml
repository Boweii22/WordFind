<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- TOP SPACER (to avoid touching status bar) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <!-- TOP BAR -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/icon_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_back_arrow"
                app:tint="#333" />

            <ImageView
                android:id="@+id/icon_fav"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:src="@drawable/ic_heart" />
        </RelativeLayout>

        <!-- WORD -->
        <TextView
            android:id="@+id/text_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="example"
            android:textColor="#111"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- PART OF SPEECH -->
        <TextView
            android:id="@+id/text_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_chip_blue"
            android:paddingHorizontal="12dp"
            android:paddingVertical="5dp"
            android:text="noun"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <!-- PHONETIC ROW -->
        <LinearLayout
            android:id="@+id/phonetic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_audio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_circle_light_blue"
                android:padding="12dp"
                android:src="@drawable/ic_volume"
                app:tint="#1E88E5" />

            <TextView
                android:id="@+id/text_phonetic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="/example/"
                android:textColor="#777"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- DEFINITIONS CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_definitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="Definitions"
                    android:textColor="#333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Definition 1"
                    android:textColor="#444"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_definition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Definition text here."
                    android:textColor="#555"
                    android:textSize="16sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- EXAMPLES HEADER -->
        <TextView
            android:id="@+id/header_examples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Examples"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- EXAMPLES CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:cardBackgroundColor="#F7F7F7"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/example_1_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="â"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#2196F3"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/text_example"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Example sentence goes here."
                        android:textColor="#444"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SYNONYMS HEADER -->
        <TextView
            android:id="@+id/header_synonyms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Synonyms"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- FLEXBOX SYNONYMS ROW 1 -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/text_synonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:flexWrap="wrap"
            app:flexDirection="row" />

        <!-- FLEXBOX SYNONYMS ROW 2 -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/text_synonyms_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:flexWrap="wrap"
            app:flexDirection="row" />

        <!-- ANTONYMS HEADER -->
        <TextView
            android:id="@+id/header_antonyms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Antonyms"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- FLEXBOX ANTONYMS -->
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/text_antonyms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:flexWrap="wrap"
            app:flexDirection="row" />

    </LinearLayout>

</ScrollView>
